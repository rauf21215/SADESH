import { GoogleGenerativeAI } from "@google/genai";

const genAI = new GoogleGenerativeAI(
  import.meta.env.VITE_GEMINI_API_KEY
);

export async function askTutor(prompt: string) {
  const model = genAI.getGenerativeModel({
    model: "gemini-3-flash-preview",
    systemInstruction:
      "You are a friendly Bangladeshi tutor. Explain clearly using simple Bangla and English mixed."
  });

  const result = await model.generateContent(prompt);
  return result.response.text();
}

import { GoogleGenerativeAI } from "@google/genai";

const genAI = new GoogleGenerativeAI(
  import.meta.env.VITE_GEMINI_API_KEY
);

export async function speakText(text: string) {
  const model = genAI.getGenerativeModel({
    model: "gemini-2.5-flash-preview-tts"
  });

  const audio = await model.generateContent(text);
  return audio;
}

import { Lock } from "lucide-react";

export default function LevelCard({ level, locked }: any) {
  return (
    <div className="rounded-3xl shadow-md p-5 bg-white">
      <h2 className="text-lg font-semibold">{level.name}</h2>

      {locked ? (
        <div className="flex items-center text-red-500 mt-3">
          <Lock size={18} />
          <span className="ml-2">Locked</span>
        </div>
      ) : (
        <p className="text-green-600 mt-3">Unlocked</p>
      )}
    </div>
  );
}

import { Volume2 } from "lucide-react";
import { speakText } from "../ai/tts";

export default function ListenButton({ text }: { text: string }) {
  const handleListen = async () => {
    await speakText(text);
  };

  return (
    <button
      onClick={handleListen}
      className="flex items-center gap-2 bg-green-600 text-white px-4 py-2 rounded-xl"
    >
      <Volume2 size={18} />
      Listen
    </button>
  );
}

import express from "express";
import cors from "cors";
import fs from "fs";

const app = express();
app.use(cors());
app.use(express.json());

const DB = "./db.json";

app.post("/payment", (req, res) => {
  const data = JSON.parse(fs.readFileSync(DB));
  data.payments.push({
    ...req.body,
    verified: false,
    date: new Date(),
  });
  fs.writeFileSync(DB, JSON.stringify(data, null, 2));
  res.json({ success: true });
});

app.get("/admin/payments", (req, res) => {
  const data = JSON.parse(fs.readFileSync(DB));
  res.json(data.payments);
});

app.post("/admin/verify/:id", (req, res) => {
  const data = JSON.parse(fs.readFileSync(DB));
  data.payments[req.params.id].verified = true;
  fs.writeFileSync(DB, JSON.stringify(data, null, 2));
  res.json({ verified: true });
});

app.listen(4000, () =>
  console.log("Backend running on port 4000")
);

